<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ltdd_app_mang_xa_hoi.NotificationsFragment">

    <include
        android:id="@+id/mark_read_container"
        layout="@layout/fragment_markread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/listviewnotification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mark_read_container" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/endnotification"
        style="@style/CustomTabText"
        android:gravity="center"
        android:layout_below="@+id/listviewnotification" />

</RelativeLayout>
