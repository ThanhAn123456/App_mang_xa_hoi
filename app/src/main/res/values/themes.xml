<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ltdd_App_mang_xa_hoi" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/blue</item>
        <item name="android:fontFamily">@font/patrick_hand</item>
        <item name="colorPrimaryDark">@color/whiteBackground</item>
        <item name="android:windowLightStatusBar">true</item>

    </style>
    <style name="MyTabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/blue</item>
        <item name="tabIndicatorColor">@color/blue</item>
    </style>
    <style name="Theme.Ltdd_App_mang_xa_hoi" parent="Base.Theme.Ltdd_App_mang_xa_hoi" />
    <style name="changecolor_ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/lighblue</item>
    </style>
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">11sp</item>
    </style>
    <style name="CustomTabText">
        <item name="android:textSize">@dimen/smallsize</item> <!-- Đặt cỡ chữ tại đây -->
        <item name="android:fontFamily">@font/patrick_hand</item>
    </style>
    <style name="TextButton">
        <item name="android:textSize">@dimen/smallsize</item> <!-- Đặt cỡ chữ tại đây -->
        <item name="android:fontFamily">@font/patrick_hand</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>